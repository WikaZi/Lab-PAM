<?xml version="1.0" encoding="utf-8"?>
<androidx.gridlayout.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pl.wsei.pam.lab02.Lab02Activity">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_6_6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="fill"
        android:onClick="onBoardSizeSelected"
        android:tag="6 6"
        android:text="6 x 6"
        android:textSize="24sp"
        app:icon="@drawable/baseline_rocket_launch_24"
        app:iconGravity="textTop"
        app:iconPadding="@dimen/icon_padding"
        app:iconSize="48dp"
        app:layout_columnSpan="1"
        app:layout_rowSpan="1"
        android:layout_margin="8dp"
        tools:ignore="GridLayout" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_4_4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="onBoardSizeSelected"
        android:tag="4 4"
        android:text="4 x 4"
        android:textSize="24sp"
        app:icon="@drawable/baseline_rocket_launch_24"
        app:iconGravity="textTop"
        app:iconPadding="@dimen/icon_padding"
        app:iconSize="48dp"
        app:layout_columnSpan="1"
        app:layout_gravity="fill"
        android:layout_margin="8dp"
        app:layout_rowSpan="1" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_4_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="onBoardSizeSelected"
        android:tag="4 3"
        android:text="4 x 3"
        android:textSize="24sp"
        app:icon="@drawable/baseline_rocket_launch_24"
        app:iconGravity="textTop"
        app:iconPadding="@dimen/icon_padding"
        app:iconSize="48dp"
        app:layout_columnSpan="1"
        app:layout_gravity="fill"
        android:layout_margin="8dp"
        app:layout_rowSpan="1" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_3_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_rowSpan="1"
        android:onClick="onBoardSizeSelected"
        android:tag="3 2"
        android:text="3 x 2"
        android:textSize="24sp"
        app:icon="@drawable/baseline_rocket_launch_24"
        app:iconGravity="textTop"
        app:iconPadding="@dimen/icon_padding"
        app:iconSize="48dp"
        app:layout_column="3"
        app:layout_columnSpan="1"
        app:layout_gravity="fill"
        app:layout_row="0"
        android:layout_margin="8dp"
        tools:ignore="GridLayout" />

</androidx.gridlayout.widget.GridLayout>
